# Transcription Pipeline Environment Configuration

# Model Configuration
WHISPER_DEFAULT_MODEL=turbo
DEFAULT_LANGUAGE=

# Device Configuration  
CUDA_AVAILABLE=false
DEVICE_SELECTION_STRATEGY=auto
PREFER_CUDA=true
FALLBACK_TO_CPU=true

# CLI Configuration
CLI_DEFAULT_MODEL=base
CLI_DEFAULT_OUTPUT_FORMAT=text
CLI_DEFAULT_CHUNK_DURATION=5.0
CLI_SHOW_PROGRESS=true
CLI_VALIDATE_INPUTS=true

# Threading and Performance Configuration
THREAD_JOIN_TIMEOUT=2.0
AUDIO_QUEUE_TIMEOUT=1.0
MAX_CONCURRENT_TRANSCRIPTIONS=1
BATCH_SIZE=1
ENABLE_OPTIMIZATIONS=true

# Audio Configuration
DEFAULT_CHUNK_DURATION=5.0
SAMPLE_WIDTH=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=transcription.log

# Validation Configuration
CHECK_FILE_EXISTS=true
VALIDATE_AUDIO_FORMAT=true
VALIDATE_MODEL_NAME=true
VALIDATE_OUTPUT_FORMAT=true
MAX_FILE_SIZE_MB=1000

# Processing Configuration
TEMP_FILE_SUFFIX=.wav
BATCH_PROCESSING_ENABLED=true
EXCEPTION_ON_OVERFLOW=false

# Diarization Configuration
DIARIZATION_DEFAULT_MODEL=medium.en
DIARIZATION_BATCH_SIZE=8
DIARIZATION_ENABLE_STEMMING=true
DIARIZATION_SUPPRESS_NUMERALS=false
DIARIZATION_TEMP_DIRECTORY=temp_outputs
FORCED_ALIGNMENT_ENABLE=true
PUNCTUATION_RESTORATION_ENABLE=true
VOCAL_SEPARATION_MODEL=htdemucs
